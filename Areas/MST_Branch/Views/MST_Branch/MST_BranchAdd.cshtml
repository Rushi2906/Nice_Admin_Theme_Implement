@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model Nice_Admin_Theme_Implement.Areas.MST_Branch.Models.MST_BranchModel

<main class="main" id="main">
    <div class="d-flex flex-column">
        <form method="post">
            @Html.HiddenFor(x=>x.BranchID)
            <div class="mt-3 mb-3">
                <h2>Add / Update Page</h2>
            </div>
            <div class="mb-3 row form-group">
                <label class="col-sm-2 col-form-label">Branch Name</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="BranchName" />
                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Branch Code</label>
                <div class="col-xl-4">
                    <input type="text" class="form-control" asp-for="BranchCode" />
                    <span asp-validation-for="BranchCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="Save">Save</button>
                <a class="btn btn-primary" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchList">Back</a>
            </div>
        </form>
    </div>
</main>

